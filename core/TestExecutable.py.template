def convert_value(value, format = 'string'):
	def to_bool(v):
		if isinstance(v, (bool, int)):
			return bool(v)
		if isinstance(v, basestring):
			return v.lower() in [ '1', 'true', 't', 'on' ]
		return False	

	if format == "string":
		return unicode(value)
	if format == "boolean":
		return to_bool(value)
	if format == "integer":
		return int(value)
	if format == "float":
		return float(value)
	return value

